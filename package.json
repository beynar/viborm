{
  "name": "viborm",
  "version": "0.1.0",
  "description": "Type-safe ORM for PostgreSQL and MySQL with Prisma-like API",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./adapters": {
      "types": "./dist/adapters.d.ts",
      "import": "./dist/adapters.mjs"
    },
    "./drivers": {
      "types": "./dist/drivers.d.ts",
      "import": "./dist/drivers.mjs"
    },
    "./drivers/pglite": {
      "types": "./dist/drivers/pglite.d.ts",
      "import": "./dist/drivers/pglite.mjs"
    },
    "./migrations": {
      "types": "./dist/migrations.d.ts",
      "import": "./dist/migrations.mjs"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.mjs"
    }
  },
  "bin": {
    "viborm": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:types": "vitest run tests/types/",
    "test:runtime": "vitest run tests/runtime/",
    "type-check": "tsc --noEmit",
    "db:run": "docker run -d --name baseorm -p 2222:5432 -e POSTGRES_DB=baseorm -e POSTGRES_PASSWORD=password postgres",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "package:build": "tsdown && tsc -p tsconfig.build.json",
    "package:build:js": "tsdown",
    "package:build:dts": "tsc -p tsconfig.build.json",
    "package:dev": "tsdown --watch"
  },
  "keywords": [
    "orm",
    "typescript",
    "postgres",
    "mysql",
    "type-safe",
    "prisma-like"
  ],
  "type": "module",
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "@ark/attest-ts-default": "npm:typescript@5.8.3",
  "devDependencies": {
    "@ark/attest": "^0.56.0",
    "@biomejs/biome": "2.3.11",
    "@cloudflare/workers-types": "^4.20260103.0",
    "@electric-sql/pglite": "^0.3.2",
    "@types/node": "^22.15.21",
    "@vitest/ui": "^3.1.4",
    "prisma": "^6.8.2",
    "tsdown": "0.19.0-beta.4",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "ultracite": "7.0.6",
    "vitest": "^3.1.4",
    "zod": "^4.1.13"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/adapter-pg": "^6.8.2",
    "@prisma/client": "6.8.2",
    "@standard-schema/spec": "^1.0.0",
    "arktype": "^2.1.27",
    "commander": "^12.0.0",
    "drizzle-orm": "^0.43.1",
    "nanoid": "^5.1.5",
    "pg": "^8.16.0",
    "pglite-prisma-adapter": "^0.5.0",
    "ulidx": "^2.4.1",
    "valibot": "^1.2.0"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@electric-sql/pglite": "^0.3.2"
  },
  "peerDependenciesMeta": {
    "@electric-sql/pglite": {
      "optional": true
    }
  }
}
